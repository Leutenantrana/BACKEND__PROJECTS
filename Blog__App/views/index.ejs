<div class="author">
    <h1 class="author__heading">Hi, I am Sagar</h1>
    <p class="author__body">Full Stack Web developer</p>
    <img src="/img/profileImage.jpg" alt="a cool handsome man" class="hero-image" width="981" height="528">

    <section class="articles">
        <h2 class="articles__heading">Latest Posts</h2>

        <ul>
            <% data.forEach(post => { %>


                <li>
                    <a href="/post/<%= post._id  %>">
                        <span><%= post.title %></span>
                        <span class="article-list__data"><%= post.createdAt.toDateString() %></span>
                    </a>

                </li>

                <% }) %>

        </ul>
        <% if(nextPage !== null){ %>
            <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>

            <% } %>
    </section>

</div>